
Paclet[
  Name -> "CodeFormatter",
  Version -> "1.3",
  WolframVersion -> "11.0+",
  Description -> "Format Wolfram Language code.",
  Creator -> "Brenton Bostick <brenton@wolfram.com>",
  BuildDate -> "",
  BuildNumber -> 0,
  Updating -> Automatic,
  Extensions -> {
    {"Kernel", Root -> "Kernel", Context -> "CodeFormatter`"},
